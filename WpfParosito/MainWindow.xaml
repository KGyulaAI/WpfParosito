<Window x:Class="WpfParosito.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfParosito"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="lbFiuk" Margin="5" Background="LightBlue"/>
        <ListBox x:Name="lbLanyok" Margin="5" Background="Pink"
                 Grid.Column="2"/>
        <TextBox x:Name="txtFiuNev" Grid.Row="1" Grid.Column="0" Background="LightGray" Margin="5" KeyDown="txtFiuNev_KeyDown"/>
        <TextBox x:Name="txtLanyNev" Grid.Row="1" Grid.Column="2" Background="LightGray" Margin="5" KeyDown="txtLanyNev_KeyDown"/>
        <Button x:Name="btnMix" Content="MIX" Grid.Column="1" Grid.Row="2" Click="btnMix_Click"/>
        <ListBox x:Name="lbParok" Margin="5" Background="PaleGoldenrod" Grid.Row="3" Grid.ColumnSpan="3"/>
    </Grid>
</Window>
